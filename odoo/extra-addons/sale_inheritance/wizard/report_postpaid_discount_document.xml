<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="report_postpaid_discount_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <meta charset="utf-8"/>
                <link rel="stylesheet" href="/base_inheritance/static/src/css/style.css"/>
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 class="text-center bold"><center>BÁO CÁO CHIẾT KHẤU TRẢ SAU</center></h2>
                    <br/>
                    <span class="text-center bold">
                        <center>
                            <t t-if="date_start">
                                <span class="text-center bold"><strong>Từ ngày: </strong><t t-esc="date_start"/></span>
                            </t>
                            <t t-if="date_start and date_end">
                                <span class="text-center bold"> - </span>
                            </t>
                            <t t-if="date_end">
                                <span class="text-center bold"><strong>Đến ngày: </strong><t t-esc="date_end"/></span>
                            </t>
                            <br/>
                            <t t-if="khachhang">
                                <span class="text-center bold"><strong>Khách hàng: </strong><t
                                        t-esc="khachhang"/></span>
                            </t>
                        </center>
                    </span>
                    <br/>
                    <div>
                        <table class="table-bordered">
                            <thead>
                                <tr>
                                    <th style="width :3%"
                                        class="table-item">STT</th>
                                    <th class="table-item">Mã</th>
                                    <th class="table-item">Nhân viên kinh doanh</th>
                                    <th class="table-item">Khách hàng</th>
                                    <th class="table-item">Ngày đặt hàng</th>
                                    <th class="table-item">Tổng</th>
                                    <th class="table-item">Tình trạng hóa đơn</th>
                                    <th class="table-item">Chiết khấu trả sau</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="i" t-value="1"/>
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td class="text-center">
                                            <span t-esc="i"/>
                                            <t t-set="i" t-value="i+1"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.name"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.user_id"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.partner_id"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.date_order" t-options='{"widget": "date"}'/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="o.invoice_status"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="abs(o.postpaid_discount)"
                                                  t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/> đ
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <div name="total">
                            <table align="right" class="table table-condensed" style="width: 30%; font-size:18px;">
                                <t t-foreach="docs" t-as="o">
                                    <t t-set="tong" t-value="o.total_postpaid_discount"></t>
                                </t>
                                <tr class="border-black">
                                    <td style="text-align:left !important;"><strong>Tổng tiền chiết khấu trả sau : </strong></td>
                                    <td class="text-right" style="text-align:right !important;">
                                        <span t-out="abs(tong)" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/> đ
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>
</odoo>