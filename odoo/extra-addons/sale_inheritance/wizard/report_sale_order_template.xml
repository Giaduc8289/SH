<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_sale_order_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <link rel="stylesheet" href="/base_inheritance/static/src/css/style.css" />
                <meta charset="utf-8"/>
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 class="text-center bold"><center>BÁO CÁO BÁN HÀNG</center></h2>
                    <br/>
                    <span class="text-center bold"><center>
                        <t t-if="date_start" >
                            <span class="text-center bold"><strong>Từ ngày : </strong><t t-esc="date_start"/></span>
                        </t>
                         <t t-if="date_start and date_end">
                            <span class="text-center bold"> - </span>
                        </t>
                        <t t-if="date_end">
                            <span class="text-center bold"><strong>Đến ngày : </strong><t t-esc="date_end"/></span>
                        </t>
                    </center>
                    </span>
                    <t t-if="khachhang">
                        <span class="text-center bold"><strong>Tên khách : </strong><t t-esc="khachhang"/></span>
                        <br/>
                    </t>
                    <t t-if="group_products">
                        <span class="text-center bold"><strong>Nhóm sản phẩm : </strong><t t-esc="group_products"/></span>
                        <br/>
                    </t>
                    <t t-if="vung">
                        <span class="text-center bold"><strong>Vùng : </strong><t t-esc="vung"/></span>
                        <br/>
                    </t>
                    <t t-if="sanpham">
                        <span class="text-center bold"><strong>Sản phẩm : </strong><t t-esc="sanpham"/></span>
                        <br/>
                    </t>
                    <t t-if="nhanvienkinhdoanh">
                        <span class="text-center bold"><strong>Nhân viên kinh doanh : </strong><t t-esc="nhanvienkinhdoanh"/></span>
                        <br/>
                    </t>
                    <br/>
                    <div>
                        <table class="table-bordered" >
                            <thead>
                                <tr>
                                    <th style="width :3%" class="table-item">STT</th>
                                    <th class="text-center">Mã</th>
                                    <th class="text-center">Nhân viên kinh doanh</th>
                                    <th class="text-center">Khách hàng</th>
                                    <th class="text-center">Ngày đặt hàng</th>
                                    <th class="text-center">Tổng</th>
                                    <th class="text-center">Tình trạng hóa đơn</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="i" t-value="1" />
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td class="text-center">
                                            <span t-esc="i"/>
                                            <t t-set="i" t-value="i+1"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.name"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.user_id"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.partner_id"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.date_order" t-options='{"widget": "date"}'/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="o.invoice_status"/>
                                        </td>
                                    </tr>
                                    <t t-set="nhanvien" t-value="o.user_id"></t>
                                    <t t-if="o.user_id != nhanvien">
                                        <tr>
                                            <td lass="text-right" colspan="1">

                                            </td>
                                            <td class="text-left" domain="[('share', '=', False)]" colspan="3">
                                                <strong><span t-field="o.user_id"/></strong>
                                            </td>
                                            <td class="text-right">
                                                <strong>
                                                    <span t-field="o.amount_total_1"
                                                          t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                                </strong>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>

</odoo>
