<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="report_discount_coupon_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <meta charset="utf-8"/>
                <link rel="stylesheet" href="/base_inheritance/static/src/css/style.css"/>
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 class="text-center bold" style="text-transform : uppercase;"><center>Postpaid discount report</center></h2>
                    <br/>
                    <span class="text-center bold">
                        <center>
                            <t t-if="khachhang">
                                <span class="text-center bold"><strong>Customer : </strong><t
                                        t-esc="khachhang"/></span>
                            </t>
                        </center>
                    </span>
                    <br/>
                    <div>
                        <table class="table-bordered">
                            <thead>
                                <tr>
                                    <th style="width :3%"
                                        class="table-item">No.</th>
                                    <th class="table-item">Name of Discount</th>
                                    <th class="table-item">Product</th>
                                    <th class="table-item">Unit Price</th>
                                    <th class="table-item">After Discount</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="i" t-value="1"/>
                                <t t-foreach="docs" t-as="doc">
                                    <tr>
                                        <td class="text-center">
                                            <span t-esc="i"/>
                                            <t t-set="i" t-value="i+1"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="doc.product_coupon"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="doc.name_coupon"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="doc.fixed_price"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>
</odoo>