<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_select_sale_order_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <meta charset="utf-8"/>
                <link rel="stylesheet" href="/base_inheritance/static/src/css/style.css"/>
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 class="text-center bold"><center>SALE REPORT</center></h2>
                    <br/>
                    <span class="text-center bold">
                        <center>
                            <t t-if="date_start">
                                <span class="text-center bold"><strong>From date : <t
                                        t-esc="date_start"/></strong></span>
                            </t>
                            <t t-if="date_start and date_end">
                                <span class="text-center bold"> - </span>
                            </t>
                            <t t-if="date_end">
                                <span class="text-center bold"><strong>To date : <t t-esc="date_end"/></strong></span>
                            </t>
                            <br/>
                            <t t-if="nhanvienkinhdoanh">
                                <span class="text-center bold"><strong>Salesman : <t
                                        t-esc="nhanvienkinhdoanh"/></strong></span>
                                <br/>
                            </t>
                            <t t-if="group_products">
                                <span class="text-center bold"><strong>Product groups : <t
                                        t-esc="group_products"/></strong></span>
                                <br/>
                            </t>
                            <t t-if="sanpham">
                                <span class="text-center bold"><strong>Product : <t t-esc="sanpham"/></strong></span>
                                <br/>
                            </t>
                        </center>
                        <t t-if="khachhang">
                            <span class="text-center bold"><strong>Customer name : <t
                                    t-esc="khachhang"/></strong></span>
                            <br/>
                        </t>
                        <t t-if="vung">
                            <span class="text-center bold"><strong>Province : <t t-esc="vung"/></strong></span>
                            <br/>
                        </t>

                    </span>

                    <br/>
                    <div>
                        <table class="table-bordered">
                            <thead>
                                <tr>
                                    <th style="width :3%"
                                        class="table-item">No.</th>
                                    <th class="table-item">Code</th>
                                    <th class="table-item">Salesman</th>
                                    <th class="table-item">Customer</th>
                                    <th class="table-item">Date Order</th>
                                    <th class="table-item">Amount</th>
                                    <th class="table-item">Invoice Status</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="i" t-value="1"/>
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td class="text-center">
                                            <span t-esc="i"/>
                                            <t t-set="i" t-value="i+1"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.name"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.user_id"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.partner_id"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.date_order" t-options='{"widget": "date"}'/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="o.invoice_status"/>
                                        </td>
                                    </tr>
                                    <t t-set="nhanvien" t-value="o.user_id"></t>
                                    <t t-if="o.user_id != nhanvien">
                                        <tr>
                                            <td lass="text-right" colspan="1">

                                            </td>
                                            <td class="text-left" domain="[('share', '=', False)]" colspan="3">
                                                <strong><span t-field="o.user_id"/></strong>
                                            </td>
                                            <td class="text-right">
                                                <strong>
                                                    <span t-field="o.amount_total_1"
                                                          t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                                </strong>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>


</odoo>
