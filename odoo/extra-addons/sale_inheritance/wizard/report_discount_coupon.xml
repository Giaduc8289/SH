    <record id="report_discount_coupon_view" model="ir.ui.view">
        <field name="name">partner.coupon.wizard.form</field>
        <field name="model">partner.coupon.wizard</field>
        <field name="arch" type="xml">
            <form create="false">
                <sheet>
                    <group>
                        <field name="product_pricelist_id" widget="many2one"/>
                        <field name="khachhang" widget="many2one"/>
                    </group>
                    <footer>
                        <button name="get_report" type="object" string="Get Report" class="oe_highlight"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>


    <record id="report_action_discount_coupon_form" model="ir.actions.act_window">
        <field name="name">Report coupon</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partner.coupon.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_discount_coupon_view"/>
    </record>

