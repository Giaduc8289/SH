        <record id="action_report_discount_coupon" model="ir.actions.report">
            <field name="name">Report discount coupon</field>
            <field name="model">partner.coupon.wizard</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">sale_inheritance.report_discount_coupon_document</field>
