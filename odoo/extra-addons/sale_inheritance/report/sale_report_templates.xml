<?xml version="1.0" encoding="utf-8"?>

<odoo>
<template id="report_saleorder" inherit_id="sale.report_saleorder_document">
<!-- <t t-set="information_block">-->
    <xpath expr="//t[@t-set='address']" position="replace">
<!--        <attribute name="invisible">1</attribute>-->
    </xpath>
    <xpath expr="//h2[@class='mt16']" position="before">
        <div style="width:100%;float:left;font-family: Arial, Helvetica, sans-serif;">
            <div style="width:20%; float:left;">
                <img src="../static/img/logocv.png" alt="tẽt" width="100px" />
            </div>
            <div style="width:80%; float:right; text-align:center !important;">
                <div style="text-transform: uppercase;font-weight: bold;">Công ty TNHH TM Công nghệ Sinh Hóa</div>
                <div>Trụ sở : Số 10, ngõ 80/3, Phố Nhân Hòa, Phường Nhân Chính, Q.Thanh Xuân - TP. Hà Nội</div>
                <div>Nhà máy: Lô 44G, KCN Quang Minh, Mê Linh, Hà Nội</div>
                <div>Tel: 043.818.2266 - Fax: 043.216.1165</div>
            </div>
        </div>
        <div style="width:100%;font-family: Arial, Helvetica, sans-serif;font-size:24px;margin: 15px 0px;text-transform: uppercase;font-weight: bold;text-align:center;">
                Hóa đơn bán hàng
        </div>

        <table cellspacing="0" cellpadding="0" style="border:1px solid red !important;width:100%;float:left;font-weight: bold;font-family: Arial, Helvetica, sans-serif;font-size:13px;">
            <tr style="border:0px !important;">
                <td style="width:150px;">Khách hàng:</td>
                <td>Bùi Văn Tuấn</td>
            </tr>
            <tr>
                <td style="width:150px;">Mã KH:</td>
                <td>tuanhn</td>
            </tr>
            <tr>
                <td style="width:150px;">Địa chỉ:</td>
                <td>Võng Xuyên- PHúc Thọ- Hà Nội</td>
            </tr>
            <tr>
                <td style="width:150px;">SĐT:</td>
                <td>0976751838</td>
            </tr>
            <tr>
                <td style="width:150px;">Thời gian:</td>
                <td>26/8/2021</td>
            </tr>
        </table>

    </xpath>
    <!--
    <xpath expr="//h2[@class='mt16']" position="before">
            <h1>    test         </h1>
    </xpath>
    <xpath expr="//table" position="after">
            <h1>abc</h1>
    </xpath>
    -->
    <xpath expr="//table" position="attributes">
<!--        <attribute name="border">1</attribute>-->
<!--        <attribute name="style">border: 1pt solid black;</attribute>-->
        <attribute name="class">table table-bordered</attribute>
    </xpath>
    <xpath expr="//th[@name='th_description']" position="after">
        <th name="th_product_weight" class="text-center">Quy cách</th>
    </xpath>
    <xpath expr="//td[@name='td_name']" position="after">
        <td name="th_product_weight" class="text-center">
            <t t-if="line.product_weight != 0">
                <span t-esc="'{0:,}'.format(int(line.product_weight))"/>
            </t>
            <t t-else="">
                <span></span>
            </t>
        </td>
    </xpath>
    <xpath expr="//span[@t-field='line.product_uom']" position="replace">
    </xpath>
</template>
</odoo>
