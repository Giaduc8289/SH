<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_employee_form_inherited" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group/field[@name='mobile_phone']" position="after">
                <field name="phone_2"/>
            </xpath>
            <xpath expr="//form/sheet/group/group/field[@name='work_email']" position="after">
                <field name="type_contract" widget="selection"/>
                <field name="start_date" widget="date"/>
                <field name="end_date" widget="date"/>
            </xpath>
            <xpath expr="//form/sheet/group/group/field[@name='coach_id']" position="replace">
                <field name="state_ids" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//field[@name='address_home_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//form/sheet/notebook/page/group/group/field[@name='address_home_id']" position="after">
                <field name="state_id" string="City"/>
            </xpath>
            <xpath expr="//form/sheet/notebook/page/group/group/field[@name='private_email']" position="replace">
                <field name="district_id"/>
            </xpath>
            <xpath expr="//form/sheet/notebook/page/group/group/field[@name='phone']" position="replace">
                <field name="village_id"/>
                <field name="address_2"/>
            </xpath>
            <xpath expr="//form/sheet/notebook/page/group/group[@name='has_work_permit']" position="replace"/>
            <xpath expr="//form/sheet/notebook/page/group/group/field[@name='emergency_contact']" position="replace"/>
            <xpath expr="//form/sheet/notebook/page/group/group/field[@name='emergency_phone']" position="replace"/>
            <xpath expr="//form/sheet/notebook/page/group/group/field[@name='place_of_birth']" position="replace"/>
            <xpath expr="//form/sheet/notebook/page/group/group/field[@name='country_of_birth']" position="replace"/>
            <xpath expr="//form/sheet/notebook/page/div/div/group/field[@name='work_location_id']" position="replace"/>
            <xpath expr="//form/sheet/notebook/page/group/group/field[@name='passport_id']" position="replace"/>
            <xpath expr="//form/sheet/notebook/page/group/group/field[@name='lang']" position="replace"/>
            <xpath expr="//form/sheet/notebook/page/group/group/label[@for='km_home_work']" position="replace"/>
            <xpath expr="//form/sheet/notebook/page/group/group/div[@class='o_row']" position="replace"/>
        </field>
    </record>
</odoo>
