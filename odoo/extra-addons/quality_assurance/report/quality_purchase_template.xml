<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_quality_purchase_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <meta charset="utf-8"/>
                <link rel="stylesheet" href="/base_inheritance/static/src/css/style.css"/>
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 style="text-transform: uppercase" class="text-center bold"><center>Quality purchase report</center></h2>
                    <span class="text-center bold">
                        <center>
                            <t t-if="date_start">
                                <span class="text-center bold"><strong>From date : <t
                                        t-esc="date_start"/></strong></span>
                            </t>
                            <t t-if="date_start and date_end">
                                <span class="text-center bold"> - </span>
                            </t>
                            <t t-if="date_end">
                                <span class="text-center bold"><strong>To date : <t t-esc="date_end"/></strong></span>
                            </t>
                            <br/>
                            <t t-if="sanpham">
                                <strong>Product: <t t-esc="sanpham"/></strong>
                            </t>
                            <br/>
                            <t t-if="kho">
                                <strong>Warehouse: <t t-esc="kho"/></strong>
                            </t>
                            <br/>
                            <t t-if="ketqua">
                                <strong>Result: <t t-esc="ketqua"/></strong>
                            </t>
                            <br/>
                        </center>
                        <t t-if="nhacungcap">
                            <strong>Supplier: <t t-esc="nhacungcap"/></strong>
                        </t>
                        <br/>


                    </span>
                    <br/>
                    <div>
                        <table class="table-bordered">
                            <thead>
                                <tr>
                                    <th style="width :3%" class="table-item">No.</th>
                                    <th style="width :12%" class="table-item">Origin</th>
                                    <th style="width :12%" class="table-item">ID</th>
                                    <th style="width :12%" class="table-item">Name product</th>
                                    <th style="width :12%" class="table-item">Date</th>
                                    <th class="table-item">Partner</th>
                                    <th style="width :12%" class="table-item">Final status</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="i" t-value="1"/>
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td class="text-center">
                                            <span t-esc="i"/>
                                            <t t-set="i" t-value="i+1"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.origin"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.name"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.product_id.name"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="o.date" t-options='{"widget": "date"}'/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.picking_id.partner_id.name"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="o.final_status"/>
                                        </td>
                                        <!--                                        <td class="text-left">-->
                                        <!--                                            <span t-field="o.date"/>-->
                                        <!--                                        </td>-->
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>

</odoo>
