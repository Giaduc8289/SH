<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_purchase_report_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <link rel="stylesheet" href="/base_inheritance/static/src/css/style.css"/>
                <meta charset="utf-8"/>
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 class="text-center bold"><center>PURCHASE REPORT</center></h2>
                    <br/>
                    <div>
                        <table class="table-bordered">
                            <thead>
                                <tr>
                                    <th style="width :3%" class="table-item">STT</th>
                                    <th class="text-center">ID</th>
                                    <th class="text-center">Confirmation date</th>
                                    <th class="text-center">Supplier</th>
                                    <th class="text-center">Received date</th>
                                    <th class="text-center">Amount total</th>
                                    <th class="text-center">Status</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="i" t-value="1"/>
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td class="text-center">
                                            <span t-esc="i"/>
                                            <t t-set="i" t-value="i+1"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.name"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.date_approve" />
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.partner_id"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.date_planned" />
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="o.state"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>

</odoo>
