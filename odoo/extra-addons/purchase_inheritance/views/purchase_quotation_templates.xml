<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_purchasequotation" inherit_id="purchase.report_purchasequotation">
        <xpath expr="//t[@t-call='web.html_container']" position="replace">

            <meta charset="utf-8"/>
            <t t-foreach="docs" t-as="doc">
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id"></t>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"></t>
                </t>
                <div class="header">
                    <div class="row mt32 mb32">
                        <div class="col-6">
                            <img src="/sale_inheritance/static/img/logobc.png" style="max-height: 50px;"/>
                        </div>
                        <div class="col-6 text-right" style="font:12px lucida-console,sans-serif !important;">
                            <span style="font-weight:bold">CÔNG TY TNHH TM &#38; CÔNG NGHỆ SINH HÓA</span>
                            <br/>
                            <span>Trụ sở : Số 10, ngõ 80/3, Phố Nhân Hòa, Phường Nhân Chính, Q.Thanh Xuân - TP. Hà
                                Nội</span>
                            <br/>
                            <span>Nhà máy: Lô 44G, KCN Quang Minh, Mê Linh, Hà Nội</span>
                            <br/>
                            <span style="font-weight:bold">Tel: 043.818.2266, Fax: 043.216.1165</span>
                            <br/>
                        </div>
                    </div>
                </div>
                <t t-call="base_inheritance.report_no_logo_layout">
                    <t t-set="doc" t-value="doc.with_context({'lang':zh_CN})"/>
                    <div class="page"  style="padding : 0;margin : 0;font-family : Arial;">
                        <div class="oe_structure"/>
                        <h2 class="text-center bold" style="text-transform : uppercase;"><strong><center>Request a quote for a purchase order</center></strong></h2>
                        <br/><br/>
                        <div>
                            <span width="30px"
                                  style="font-weight: bold;">
                                Partner id: <span>
                                <t t-if="doc.partner_id.code">
                                    <t t-esc="doc.partner_id.code"/>
                                </t>
                            </span>
                            </span><br/>
                            <span width="30px"
                                  style="font-weight: bold;">
                                Partner: <span>
                                <t t-if="doc.partner_id.name">
                                    <t t-esc="doc.partner_id.name"/>
                                </t>
                            </span>
                            </span><br/>
                            <span width="20px"
                                  style="font-weight: bold;">
                                Phone number: <span>
                                <t t-if="doc.partner_id.phone">
                                    <t t-esc="doc.partner_id.phone"/>
                                </t>
                            </span>
                            </span><br/>
                            <span width="20px"
                                  style="font-weight: bold;">
                                Address: <span>
                                <t t-if="doc.partner_id.village_id.name">
                                    <t t-esc="doc.partner_id.village_id.name"/>
                                </t>-
                            </span>
                                <span>
                                    <t t-if="doc.partner_id.district_id.name">
                                        <t t-esc="doc.partner_id.district_id.name"/>
                                    </t>-
                                </span>
                                <span>
                                    <t t-if="doc.partner_id.country_id.name">
                                        <t t-esc="doc.partner_id.country_id.name"/>
                                    </t>
                                </span>
                            </span><br/>
                            <br/>
                        </div>
                        <table class="table table-bordered"
                               style="border-collapse: collapse ; width : 100%; font-family :Arial !important;">
                            <thead>
                                <tr>
                                    <th style="background-color:#4cb1a7 !important; color : #FFFFFF !important; border: 1px solid #000000 !important;width :3%"
                                        class="table-item">No.</th>
                                    <th style="background-color:#4cb1a7 !important; color : #FFFFFF !important; border: 1px solid black !important; width: 8%;"
                                        class="text-center">Product id</th>
                                    <th style="background-color:#4cb1a7 !important; color : #FFFFFF !important; border: 1px solid black !important; "
                                        class="text-center">Product</th>
                                    <th style="background-color:#4cb1a7 !important; color : #FFFFFF !important; border: 1px solid black !important; width:20%;"
                                        class="text-center">Delivery date</th>
                                    <th style="background-color:#4cb1a7 !important; color : #FFFFFF !important; border: 1px solid black !important; width: 10%;"
                                        class="text-center">Quantity</th>
                                    <th style="background-color:#4cb1a7 !important; color : #FFFFFF !important; border: 1px solid black !important; width: 15%;"
                                        class="text-center">Unit price</th>
                                    <th style="background-color:#4cb1a7 !important; color : #FFFFFF !important; border: 1px solid black !important; width: 15%;"
                                        class="text-center">Amount</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="i" t-value="1"/>
                                <t t-foreach="doc.order_line" t-as="l">
                                    <tr>
                                        <td class="text-center"
                                            style="border: 1px solid black;text-align: center !important;">
                                            <span t-esc="i"/>
                                            <t t-set="i" t-value="i+1"/>
                                        </td>
                                        <td class="text-left"
                                            style="border: 1px solid black;text-align: left !important;">
                                            <span t-field="l.product_id.code"/>
                                        </td>
                                        <td class="text-left"
                                            style="border: 1px solid black;text-align: left !important;">
                                            <span t-field="l.name"/>
                                        </td>
                                        <td class="text-right"
                                            style="border: 1px solid black;text-align: right !important;">
                                            <span t-field="l.date_order"/>
                                        </td>
                                        <td class="text-right"
                                            style="border: 1px solid black;text-align: right !important;">
                                            <span t-field="l.product_uom_qty"/>
                                            <span groups="uom.group_uom" t-field="l.product_uom"/>
                                        </td>
                                        <td class="text-right"
                                            style="border: 1px solid black;text-align: right !important;">
                                            <span t-field="l.price_unit"/>
                                        </td>
                                        <td class="text-right"
                                            style="border: 1px solid black;text-align: right!important;">
                                            <span t-field="l.price_subtotal"
                                                  t-field-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <div name="total">
                            <table align="right" class="table table-condensed"
                                   style="width: 30%; ">
                                <tr class="border-black">
                                    <td style="text-align:left !important;"><strong>Amount total:</strong></td>
                                    <td class="text-right" style="text-align:right !important;">
                                        <span t-field="doc.amount_untaxed_5"
                                              t-field-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
                <p style="page-break-after : always;"></p>
            </t>
        </xpath>
    </template>
</odoo>