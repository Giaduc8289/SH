<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="report_purchaseorder_inheritance" inherit_id="purchase.report_purchaseorder">

        <xpath expr="//t[@t-call='web.html_container']" position="replace">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-if="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id"></t>
                    </t>
                    <t t-if="not o or not 'company_id' in o">
                        <t t-set="company" t-value="res_company"></t>
                    </t>
                    <div class="header">
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <img src="/sale_inheritance/static/img/logobc.png"
                                     style="max-height: 50px;"/>
                            </div>
                            <div class="col-6 text-right" style="font:12px lucida-console,sans-serif !important ;">
                                <span style="font-weight:bold">CÔNG TY TNHH TM &#38; CÔNG NGHỆ SINH HÓA</span>
                                <br/>
                                <span>Trụ sở : Số 10, ngõ 80/3, Phố Nhân Hòa, Phường Nhân Chính, Q.Thanh Xuân - TP. Hà
                                    Nội</span>
                                <br/>
                                <span>Nhà máy: Lô 44G, KCN Quang Minh, Mê Linh, Hà Nội</span>
                                <br/>
                                <span style="font-weight:bold">Tel: 043.818.2266, Fax: 043.216.1165</span>
                                <br/>
                            </div>
                        </div>
                    </div>
                    <t t-call="web.report_layout">
                        <t t-set="doc" t-value="doc.with_context({'lang':zh_CN})"/>
                        <div class="page">
                            <div class="oe_structure"/>
                            <strong style="font-weight: bold;">
                                <h2 class="text-center bold"><center>HÓA ĐƠN MUA HÀNG</center></h2>
                            </strong>
                            <br/><br/><br/>
                            <div>
                                <span width="30px"
                                      style="font-weight: bold; font-size:20px;">
                                    Đơn mua hàng: <span>
                                    <t t-if="doc.name">
                                        <t t-esc="doc.name"/>
                                    </t>
                                </span>
                                </span><br/>
                                <span width="30px"
                                      style="font-weight: bold; font-size:20px;">
                                    Nhà cung cấp: <span>
                                    <t t-if="doc.partner_id.name">
                                        <t t-esc="doc.partner_id.name"/>
                                    </t>
                                </span>
                                </span><br/>

                                <span width="30px"
                                      style="font-weight: bold; font-size:20px;">
                                    Số điện thoại: <span>
                                    <t t-if="doc.partner_id.phone">
                                        <t t-esc="doc.partner_id.phone"/>
                                    </t>
                                </span>
                                </span><br/><br/>
                                <span width="30px"
                                      style="font-weight: bold; font-size:20px;">
                                    Đơn hàng của bạn: <span>
                                    <t t-if="doc.partner_ref">
                                        <t t-esc="doc.partner_ref"/>
                                    </t>
                                </span>
                                </span><br/>
                                <span width="30px"
                                      style="font-weight: bold;">
                                    Ngày đặt hàng: <span>
                                    <t t-if="doc.date_order">
                                        <t t-esc="doc.date_order"/>
                                    </t>
                                </span>
                                </span><br/>
                                <span width="30px"
                                      style="font-weight: bold; font-size:20px;">
                                    Địa chỉ giao hàng:
                                </span>
                                <span> Lô 44G KCN Quang Minh - Mê Linh - Hà Nội <br/>
                                    Số 10 ngõ 80/3 phố Nhân Hòa, Phường Nhân Chính, Quận Thanh Xuân
                                    Hà Nội Việt Nam
                                </span><br/>


                                <table class="table table-bordered" style="border-collapse: collapse ; width : 100%;">
                                    <thead>
                                        <tr>
                                            <th style="background-color:#343A40 !important;color:#FFF !important; border-color: #FFF !important;"
                                                class="text-left">Mã SP</th>
                                            <th style="background-color:#343A40 !important;color:#FFF !important; border-color: #FFF !important;"
                                                class="text-left">Tên sản phẩm</th>
                                            <th style="background-color:#343A40 !important;color:#FFF !important; border-color: #FFF !important;"
                                                class="text-right">Thuế</th>
                                            <th style="background-color:#343A40 !important;color:#FFF !important; border-color: #FFF !important;"
                                                class="text-right">Số lượng</th>
                                            <th style="background-color:#343A40 !important;color:#FFF !important; border-color: #FFF !important;"
                                                class="text-right">Đơn giá</th>
                                            <th style="background-color:#343A40 !important;color:#FFF !important; border-color: #FFF !important;"
                                                class="text-right">Thành tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody class="purchase_tbody">
                                        <t t-set="current_subtotal" t-value="0"/>
                                        <t t-foreach="doc.order_line" t-as="l">
                                            <tr>

                                                <td class="text-left" style="border: 1px solid black;text-align: left !important;">
                                                    <span t-field="l.product_id.code"/>
                                                </td>
                                                <td class="text-left" style="border: 1px solid black;text-align: left !important;">
                                                    <span t-field="l.name"/>
                                                </td>
                                                <td nclass="text-right" style="border: 1px solid black;text-align: right !important;">
                                                    <span t-esc="', '.join(map(lambda x: x.name, l.taxes_id))"/>
                                                </td>
                                                <td class="text-right" style="border: 1px solid black;text-align: right !important;">
                                                    <span t-field="l.product_qty"/>
                                                    <span t-field="l.product_uom.name" groups="uom.group_uom"/>
                                                </td>
                                                <td class="text-right" style="border: 1px solid black;text-align: right !important;">
                                                    <span t-field="l.price_unit"/>
                                                </td>
                                                <td class="text-right" style="border: 1px solid black;text-align: right !important;">
                                                    <span t-field="l.price_subtotal"
                                                          t-field-options='{"widget": "monetary", "display_currency": "doc.currency_id"}'/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <div name="total">
                                <div class="col-xs-4 pull-right">
                                    <table class="table table-condensed">
                                        <tr class="border-black">
                                            <td><strong>Tổng tiền:</strong></td>
                                            <td class="text-right">
                                                <span t-field="doc.amount_untaxed_5"
                                                      t-field-options='{"widget": "monetary", "display_currency": "doc.currency_id"}'/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <br/><br/><br/><br/><br/><br/><br/><br/><br/>
                        </div>
                    </t>
                    <p style="page-break-after : always;"></p>
                </t>


            </t>
        </xpath>

    </template>
</odoo>