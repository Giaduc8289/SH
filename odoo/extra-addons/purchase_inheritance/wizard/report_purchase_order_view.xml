<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_purchase_order_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <link rel="stylesheet" href="/base_inheritance/static/src/css/style.css" />
                <meta charset="utf-8"/>
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 class="text-center bold"><center>BÁO CÁO MUA HÀNG</center></h2>
                    <br/>
                    <span class="text-center bold"><center>
                        <t t-if="date_start" >
                            <span class="text-center bold"><strong>Từ ngày : </strong><t t-esc="date_start"/></span>
                        </t>
                         <t t-if="date_start and date_end">
                            <span class="text-center bold"><strong> - </strong></span>
                        </t>
                        <t t-if="date_end">
                            <span class="text-center bold"><strong>Đến ngày : </strong><t t-esc="date_end"/></span>
                        </t>
                    </center>
                    </span>
                    <br/>
                    <t t-if="state">
                        <span class="text-center bold"><strong>Trạng thái hợp đồng : </strong><t t-esc="state"/></span>
                        <br/>
                    </t>
                    <t t-if="group_products">
                        <span class="text-center bold"><strong>Nhóm sản phẩm: </strong><t t-esc="group_products"/></span>
                        <br/>
                    </t>
                    <t t-if="nhacungcap">
                        <span class="text-center bold"><strong>Nhà cung cấp : </strong><t t-esc="nhacungcap"/></span>
                        <br/>
                    </t>
                    <t t-if="sanpham">
                        <span class="text-center bold"><strong>Sản phẩm: </strong><t t-esc="sanpham"/></span>
                        <br/>
                    </t>
                    <br/>
                    <div>
                        <table class="table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center">Mã phiếu</th>
                                    <th class="text-center">Ngày đặt hàng</th>
                                    <th class="text-center">Nhà cung cấp</th>
                                    <th class="text-center">Ngày xác nhận</th>
                                    <th class="text-center">Tổng</th>
                                    <th class="text-center">Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td class="text-left">
                                            <span t-field="o.name"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.date_order" t-options='{"widget": "date"}'/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.partner_id"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.date_approve" t-options='{"widget": "date"}'/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="o.state"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>

</odoo>
