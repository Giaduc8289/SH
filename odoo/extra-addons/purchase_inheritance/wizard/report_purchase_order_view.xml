<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_purchase_order_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <link rel="stylesheet" href="/base_inheritance/static/src/css/style.css"/>
                <meta charset="utf-8"/>
                <div class="page" style="padding : 0;margin : 0;font-family : Arial;">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 class="text-center bold" style="width:100%; text-align:center;font-weight: 550;font-size: 40px;text-transform: uppercase;"><center>PURCHASE INVOICE</center></h2>
                    <br/>
                    <span class="text-center bold"><center>
                        <t t-if="date_start">
                            <span class="text-center bold"><strong>From date: <t t-esc="date_start"/></strong></span>
                        </t>
                        <t t-if="date_start and date_end">
                            <span class="text-center bold"><strong> - </strong></span>
                        </t>
                        <t t-if="date_end">
                            <span class="text-center bold"><strong>To date: <t t-esc="date_end"/></strong></span>
                        </t>
                        <br/>
                        <t t-if="sanpham">
                            <span class="text-center bold"><strong>Product: <t t-esc="sanpham"/></strong></span>
                            <br/>
                        </t>
                        <t t-if="group_products">
                            <span class="text-center bold"><strong>Product group: <t t-esc="group_products"/></strong></span>
                            <br/>
                        </t>
                    </center>
                        <t t-if="nhacungcap">
                            <span class="text-center bold"><strong>Supplier: <t t-esc="nhacungcap"/></strong></span>
                            <br/>
                        </t>
                        <t t-if="state">
                            <span class="text-center bold"><strong>Contract status: <t t-esc="state"/></strong></span>
                            <br/>
                        </t>
                    </span>
                    <br/>
                    <div>
                        <table class="table-bordered"
                        style="border-collapse: collapse; width : 100%; border : border-box;">
                            <thead>
                                <tr>
                                    <th style="width :3% ;background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;" class="table-item">No.</th>
                                    <th class="text-center" style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;">ID</th>
                                    <th class="text-center" style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;">Order date</th>
                                    <th class="text-center" style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;">Supplier</th>
                                    <th class="text-center" style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;">Confirmation date</th>
                                    <th class="text-center" style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;">Amount total</th>
                                    <th class="text-center" style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;">Status</th>
                                    <th class="text-center" style="width:12%; background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;">Note</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="i" t-value="1"/>
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td style="text-align: center;padding : 8px;border: 1px solid black;" class="text-center">
                                            <span t-esc="i"/>
                                            <t t-set="i" t-value="i+1"/>
                                        </td>
                                        <td style="padding : 8px;border: 1px solid black;" class="text-left">
                                            <span t-field="o.name"/>
                                        </td>
                                        <td style="padding : 8px;border: 1px solid black;" class="text-left">
                                            <span t-field="o.date_order"/>
                                        </td>
                                        <td style="padding : 8px;border: 1px solid black;" class="text-left">
                                            <span t-field="o.partner_id"/>
                                        </td>
                                        <td style="padding : 8px;border: 1px solid black;text-align:right;" class="text-right">
                                            <span t-field="o.date_approve"/>
                                        </td>
                                        <td style="padding : 8px;border: 1px solid black;text-align:right;" class="text-right">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                        <td style="padding : 8px;border: 1px solid black;text-align:center;" class="text-center">
                                            <span t-field="o.state"/>
                                        </td>
                                        <td style="padding : 8px;border: 1px solid black;text-align:right;">

                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>

</odoo>
