<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="report_purchase_order_view" model="ir.ui.view">
        <field name="name">report.purchase.wizard.form</field>
        <field name="model">purchase.report.wizard</field>
        <field name="arch" type="xml">
                   <form create="false">
                <sheet>
                    <group>
                        <group>
                            <field name="date_start" widget="date" />
                            <field name="state"  widget="selection"/>
                            <field name="nhacungcap"  widget="many2one"/>
                        </group>
                        <group>
                            <field name="date_end" widget="date" />
                            <field name="group_products"  widget="many2one"/>
                            <field name="sanpham"  widget="many2one"/>
                        </group>
                    </group>
                    <button name="get_report" type="object" string="Filter" class="oe_highlight"/>
                </sheet>
            </form>
        </field>
    </record>
    <record id="report_purchase_report_action_form" model="ir.actions.act_window">
        <field name="name">Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_purchase_order_view"/>
    </record>

    <menuitem id="report_purchase_menu"
              action="report_purchase_report_action_form"
              name="Báo cáo chi tiết"
              parent="purchase.purchase_report_main"
              sequence="100"/>
