<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_access_control_document">
        <t t-set="change" t-value="0"/>
        <t t-foreach="docs" t-as="o">
            <t t-if="docs[0].purpose != o.purpose">
                <t t-set="change" t-value="1"/>
            </t>
        </t>
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <t t-if="change == 1 or docs[0].purpose == 'visit' or docs[0].purpose == 'work'">
                        <h2 class="text-center bold"><center>BÁO CÁO KIỂM SOÁT VÀO RA</center></h2>
                    </t>
                    <t t-if="change == 0 and docs[0].purpose == 'sale'">
                        <h2 class="text-center bold"><center>BÁO CÁO KIỂM SOÁT VÀO RA BÁN HÀNG</center></h2>
                    </t>
                    <t t-if="change == 0 and docs[0].purpose == 'purchase'">
                        <h2 class="text-center bold"><center>BÁO CÁO KIỂM SOÁT VÀO RA MUA HÀNG</center></h2>
                    </t>
                    <br/>
                    <div>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;"
                                        class="text-left">Mã khách hàng</th>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;"
                                        class="text-left">Tên khách</th>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;"
                                        class="text-left">Tài Xế</th>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;"
                                        class="text-left">Địa chỉ</th>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;"
                                        class="text-right">Thời gian vào</th>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;"
                                        class="text-right">Thời gian ra</th>
                                    <t t-if="change == 1 or docs[0].purpose == 'visit' or docs[0].purpose == 'work' ">
                                        <th style="background-color:#3498DB !important;color:#FFF !important;"
                                            class="text-right">Mục đích</th>
                                    </t>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;"
                                        class="text-right">Ghi chú</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td class="text-left">
                                            <span t-field="o.makh"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.name"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.taixe"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.address"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.in_time"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.out_time"/>
                                        </td>
                                        <t t-if="change == 1 or docs[0].purpose == 'visit' or docs[0].purpose == 'work' ">
                                            <td class="text-right">
                                                <span t-field="o.purpose"/>
                                            </td>
                                        </t>
                                        <td class="text-right">
                                            <span t-field="o.purpose_descript"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>

</odoo>
