<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_weight_vehicle_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <link rel="stylesheet" href="/base_inheritance/static/src/css/style.css"/>
                <meta charset="utf-8"/>
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 class="text-center bold"><center>Vehicle Weight Report</center></h2>
                    <br/>
                    <center>
                        <span class="text-center bold"><center>
                            <t t-if="date_start">
                                <span class="text-center bold"><strong>From date: </strong> <t
                                        t-esc="date_start"/></span>
                            </t>
                            <t t-if="date_start and date_end">
                                <span class="text-center bold"> - </span>
                            </t>
                            <t t-if="date_end">
                                <span class="text-center bold"><strong> To date: </strong><t t-esc="date_end"/></span>
                            </t>
                        </center>
                        </span>
                        <t t-if="res_partner_id">
                            <span><strong>Guest name: </strong> <t t-esc="res_partner_id"/></span>
                        </t>
                        <br/>
                        <t t-if="purpose">
                            <span><strong>Purpose: </strong><t t-esc="purpose"/></span>
                        </t>
                    </center>
                    <br/>
                    <div>
                        <table class="table-bordered">
                            <thead>
                                <tr>
                                     <th style="width :3%"
                                        class="table-item">STT</th>
                                    <th style="width :15%;"
                                        class="text-center">License plates</th>
                                    <th style="width :25%;"
                                        class="text-center">Driver's name</th>
                                    <th style="width :10%;"
                                        class="text-center">Time in</th>
                                    <th style="width :10%;"
                                        class="text-center">Time out</th>
                                    <th style="width :10%;"
                                        class="text-center">Weight in</th>
                                    <th style="width :10%;"
                                        class="text-center">Weight out</th>
                                    <th style="width :10%;"
                                        class="text-center">Cargo weight</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="i" t-value="1" />
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td class="text-center">
                                            <span t-esc="i"/>
                                            <t t-set="i" t-value="i+1"/>
                                        </td>
                                        <td class="text-left" >
                                            <span t-field="o.number_plate"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.taixe"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="o.in_time"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="o.out_time"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.weight_in"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.weight_out"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.weight_goods"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>

</odoo>
