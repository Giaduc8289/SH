<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_access_control_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <meta charset="utf-8"/>
                <link rel="stylesheet" href="/base_inheritance/static/src/css/style.css" />
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 class="text-center bold"><center>BÁO CÁO KIỂM SOÁT VÀO RA</center></h2>
                    <br/>
                    <span class="text-center bold"><center>
                        <t t-if="date_start" >
                        <span class="text-center bold"> <strong>Từ ngày : </strong> <t t-esc="date_start"/></span>
                        </t>
                         <t t-if="date_start and date_end">
                            <span class="text-center bold"> - </span>
                        </t>
                        <t t-if="date_end">
                            <span class="text-center bold"> <strong> Đến ngày : </strong><t t-esc="date_end"/></span>
                        </t>
                    </center>
                    </span>
                    <t t-if="res_partner_id">
                        <span><strong>Tên khách : </strong><t t-esc="res_partner_id"/></span>
                    </t>
                    <br/>
                    <t t-if="purpose">
                        <span><strong>Mục đích đến: </strong><t t-esc="purpose"/></span>
                    </t>
                    <br/>
                    <br/>
                    <div>
                        <table class="table-bordered">
                            <thead>
                                <tr>
                                    <th style="width :9%;"
                                        class="table-item">Mã khách hàng</th>
                                    <th style="width :15%;"
                                        class="">Tên khách</th>
                                    <th style="width :15%;"
                                        class="">Tài xế</th>
                                    <th style="width :25%;"
                                        class="">Địa chỉ</th>
                                    <th style="width :10%;"
                                        class="">Thời gian vào</th>
                                    <th style="width :10%;"
                                        class="">Thời gian ra</th>
                                    <!--                                    <t t-if="change == 1 or docs[0].purpose == 'visit' or docs[0].purpose == 'work' ">-->
                                    <!--                                        <th style="width :8%;"-->
                                    <!--                                            class="">Mục đích</th>-->
                                    <!--                                    </t>-->
                                    <th style="width :8%;"
                                        class="">Ghi chú
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td class="text-left">
                                            <span t-field="o.makh"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.name"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.taixe"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.address"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="o.in_time"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="o.out_time"/>
                                        </td>
                                        <!--                                        <t t-if="change == 1 or docs[0].purpose == 'visit' or docs[0].purpose == 'work' ">-->
                                        <!--                                            <td class="text-left"-->
                                        <!--                                               >-->
                                        <!--                                                <span t-field="o.purpose"/>-->
                                        <!--                                            </td>-->
                                        <!--                                        </t>-->
                                        <td class="text-left">
                                            <span t-field="o.purpose_descript"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>

</odoo>
