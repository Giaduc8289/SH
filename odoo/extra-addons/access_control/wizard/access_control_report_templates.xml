<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_access_control_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <meta charset="utf-8"/>
                <link rel="stylesheet" href="/base_inheritance/static/src/css/style.css"/>
                <div class="page" style="padding : 0;margin : 0;font-family : Arial;">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 class="text-center bold"
                        style="width:100%; text-align:center;font-weight: 550;font-size: 40px;text-transform: uppercase;">
                        <center>Access Control Report</center></h2>
                    <br/>
                    <span class="text-center bold"><center>
                        <t t-if="date_start">
                            <span class="text-center bold"><strong>From date: <t
                                    t-esc="date_start"/></strong></span>
                        </t>
                        <t t-if="date_start and date_end">
                            <span class="text-center bold"> - </span>
                        </t>
                        <t t-if="date_end">
                            <span class="text-center bold"><strong> To date: <t t-esc="date_end"/></strong></span>
                        </t>
                    </center>
                    </span>
                    <t t-if="res_partner_id">
                        <span><strong>Guest name: <t t-esc="res_partner_id"/></strong></span>
                    </t>
                    <br/>
                    <t t-if="purpose">
                        <span><strong>Purpose: <t t-esc="purpose"/></strong></span>
                    </t>
                    <br/>
                    <br/>
                    <div>
                        <table class="table-bordered"
                               style="border-collapse: collapse; width : 100%; border : border-box;">
                            <thead>
                                <tr>
                                    <th style="width :3%;background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="table-item">No.</th>
                                    <th style="width :9%;background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="table-item">Customer's code</th>
                                    <th style="width :9%;background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="table-item">License plates</th>
                                    <th style="width :15%;background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black; text-align : center !important;"
                                        class="table-item">Customer's name</th>
                                    <th style="width :9%;background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="table-item">Driver's name</th>
                                    <th style="width :20%;background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="table-item">Address</th>
                                    <th style="width :10%;background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="table-item">Time in</th>
                                    <th style="width :10%;background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="table-item">Time out</th>
                                    <th style="width :10%;background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="table-item">Note
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="i" t-value="1"/>
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td class="text-center"
                                            style="padding : 8px;border: 1px solid black;text-align:center;">
                                            <span t-esc="i"/>
                                            <t t-set="i" t-value="i+1"/>
                                        </td>
                                        <td class="text-left"
                                            style="padding : 8px;border: 1px solid black;">
                                            <span t-field="o.makh"/>
                                        </td>
                                        <td class="text-left"
                                            style="padding : 8px;border: 1px solid black;">
                                            <span t-field="o.number_plate"/>
                                        </td>
                                        <td class="text-left"
                                            style="padding : 8px;border: 1px solid black;">
                                            <span t-field="o.name"/>
                                        </td>
                                        <td class="text-left"
                                            style="padding : 8px;border: 1px solid black;">
                                            <span t-field="o.taixe"/>
                                        </td>
                                        <td class="text-left"
                                            style="padding : 8px;border: 1px solid black;">
                                            <span t-field="o.address"/>
                                        </td>
                                        <td class="text-center"
                                            style="padding : 8px;border: 1px solid black;">
                                            <span t-field="o.in_time"/>
                                        </td>
                                        <td class="text-center"
                                            style="padding : 8px;border: 1px solid black;">
                                            <span t-field="o.out_time"/>
                                        </td>
                                        <td class="text-left"
                                            style="padding : 8px;border: 1px solid black;">
                                            <span t-field="o.purpose_descript"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>

</odoo>
