<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_error" inherit_id="http_routing.500">
        <xpath expr="//html" position="replace">
            <div><h1>The data you are looking for does not exist</h1></div>
        </xpath>
    </template>

    <!-- Views -->
    <record id="access_control_form_view" model="ir.ui.view">
        <field name="name">access.control.form</field>
        <field name="model">access.control</field>
        <field name="arch" type="xml">
            <form class="oe_form_configuration">
                <header>
                    <button name="action_weigh_in" type="object" string="Weigh In" class="oe_highlight"
                            attrs="{'invisible': [('purpose', 'in', ('visit', 'work'))]}"
                            groups="access_control.group_weight_user"/>
                    <button name="action_create_order" type="object" string="Create Order" class="oe_highlight"
                            attrs="{'invisible': [('purpose', 'in', ('visit', 'work'))]}"
                            groups="sales_team.group_sale_salesman, purchase.group_purchase_user"/>
                    <button name="action_weigh_out" type="object" string="Weigh Out" class="oe_highlight"
                            attrs="{'invisible': [('purpose', 'in', ('visit', 'work'))]}"
                            groups="access_control.group_weight_user"/>
                    <button name="action_check_out" id="action_confirm" data-hotkey="v"
                            string="Check out" class="btn-primary" type="object"
                            attrs="{'invisible': [('state', '=', 'out')]}"
                            groups="access_control.group_access_control_user"/>
                    <field name="state" widget="statusbar" statusbar_visible="in,weighin,unload,weighout,out"/>
                </header>
                <sheet>
                    <group>
                        <field name="purpose" widget="radio" options="{'horizontal': true}"
                               attrs="{'readonly': 1}"></field>
                    </group>
                    <br/>
                    <group>
                        <group>
                            <label for="number_plate" string="License plates"/>
                            <h1><field name="number_plate" placeholder="30A 123.45" attrs="{'readonly': 1}"/></h1>
                        </group>
                        <group attrs="{'invisible': [('purpose', 'in', ('visit', 'work'))]}">
                            <label for="taixe" string="Driver's name"/>
                            <h1><field name="taixe" attrs="{'readonly': 1}"/></h1>
                        </group>
                    </group>
                    <group attrs="{'invisible': [('purpose', 'in', ('visit', 'work'))]}">
                        <group>
                            <label for="res_partner_id" string="Partner"/>
                            <h1><field name="res_partner_id" attrs="{'readonly': 1}"/></h1>
                        </group>
                        <group>
                            <label for="makh" string="Customer's code"/>
                            <h1><field name="makh" attrs="{'readonly': 1}"/></h1>
                        </group>
                    </group>
                    <group attrs="{'invisible': [('purpose', 'in', ('sale', 'purchase'))]}">
                        <label for="name" string="Customer's name"/>
                        <h1><field name="name" required="1" attrs="{'readonly': 1}"/></h1>
                    </group>
                    <group>
                        <label for="phone" string="Phone number"/>
                        <h3><field name="phone" attrs="{'readonly': 1}"/></h3>
                    </group>
                    <group>
                        <label for="address" string="Address"/>
                        <h3><field name="address" attrs="{'readonly': 1}"/></h3>
                        <field name="purpose_descript"
                               attrs="{'invisible': [('purpose', '!=', 'visit')], 'readonly': 1}"/>
                    </group>
                    <group>
                        <group>
                            <field name="ordinal_number" readonly="1"></field>
                        </group>
                        <group></group>
                        <group>
                            <field name="in_time" readonly="1"></field>
                            <field name="weight_in"
                                   attrs="{'invisible': [('purpose', 'in', ('visit', 'work'))], 'readonly': 1 }"></field>
                        </group>
                        <group>
                            <field name="out_time" readonly="1"></field>
                            <field name="weight_out"
                                   attrs="{'invisible': [('purpose', 'in', ('visit', 'work'))], 'readonly': 1 }"></field>
                        </group>
                    </group>
                    <group attrs="{'invisible': [('purpose', 'in', ('visit', 'work'))]}">
                        <field name="product_category_ids" widget="many2many_tags" attrs="{'readonly': 1 }">
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="access_control_form_view_weight_vehicle" model="ir.ui.view">
        <field name="name">access.control.form.weight_vehicle</field>
        <field name="model">access.control</field>
        <field name="inherit_id" ref="access_control_form_view"/>
        <field name="groups_id" eval="[(6, 0, [ref('access_control.group_weight_user')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='weight_in']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'weighin')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='weight_out']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'weighout')]}</attribute>
            </xpath>
        </field>
    </record>
    <record id="access_control_form_view_group_access" model="ir.ui.view">
        <field name="name">access.control.form.group_access</field>
        <field name="model">access.control</field>
        <field name="inherit_id" ref="access_control_form_view"/>
        <field name="groups_id" eval="[(6, 0, [ref('access_control.group_access_control_user')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='purpose']" position="attributes">
                <attribute name="attrs">{'readonly': 0}</attribute>
            </xpath>
            <xpath expr="//field[@name='number_plate']" position="attributes">
                <attribute name="attrs">{'readonly': 0}</attribute>
            </xpath>
            <xpath expr="//field[@name='res_partner_id']" position="attributes">
                <attribute name="attrs">{'readonly': 0}</attribute>
            </xpath>
            <xpath expr="//field[@name='makh']" position="attributes">
                <attribute name="attrs">{'readonly': 0}</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="attrs">{'readonly': 0}</attribute>
            </xpath>
            <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="attrs">{'readonly': 0}</attribute>
            </xpath>
            <xpath expr="//field[@name='taixe']" position="attributes">
                <attribute name="attrs">{'readonly': 0}</attribute>
            </xpath>
            <xpath expr="//field[@name='address']" position="attributes">
                <attribute name="attrs">{'readonly': 0}</attribute>
            </xpath>
            <xpath expr="//field[@name='purpose_descript']" position="attributes">
                <attribute name="attrs">{'readonly': 0}</attribute>
            </xpath>
            <xpath expr="//field[@name='product_category_ids']" position="attributes">
                <attribute name="attrs">{'readonly': 0}</attribute>
            </xpath>
        </field>
    </record>

    <record id="access_control_form_view_group_sale" model="ir.ui.view">
        <field name="name">access.control.form.group_sale</field>
        <field name="model">access.control</field>
        <field name="inherit_id" ref="access_control_form_view"/>
        <field name="groups_id" eval="[(6, 0, [ref('sales_team.group_sale_salesman')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_category_ids']/.." position="after">
                <group>
                    <field name="sale_ids" widget="many2many" context="{'default_partner_id': res_partner_id}"
                           attrs="{'invisible': [('purpose', 'in', ('visit', 'work', 'sale'))], 'readonly': [('state', 'not in', ('unload'))] }"/>
                </group>
            </xpath>
        </field>
    </record>
    <record id="access_control_form_view_group_purchase" model="ir.ui.view">
        <field name="name">access.control.form.group_purchase</field>
        <field name="model">access.control</field>
        <field name="inherit_id" ref="access_control_form_view"/>
        <field name="groups_id" eval="[(6, 0, [ref('purchase.group_purchase_user')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_category_ids']/.." position="after">
                <group>
                    <field name="purchase_ids" widget="many2many" context="{'default_partner_id': res_partner_id}"
                           attrs="{'invisible': [('purpose', 'in', ('visit', 'work', 'purchase'))], 'readonly': [('state', 'not in', ('unload'))] }"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="access_control_inout_form_view" model="ir.ui.view">
        <field name="name">access.control.form</field>
        <field name="model">access.control</field>
        <field name="arch" type="xml">
            <form class="oe_form_configuration">
                <header>
                    <button name="action_check_out" id="action_confirm" data-hotkey="v"
                            string="Check out" class="btn-primary" type="object"
                            attrs="{'invisible': [('state', '=', 'out')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="in,out"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="number_plate" string="License plates"/>
                        <h1><field name="number_plate" placeholder="30A 123.45"/></h1>
                        <label for="res_partner_id" string="Partner"/>
                        <h1><field name="res_partner_id"/></h1>
                        <group>
                            <h1><field name="name" required="1"/></h1>
                        </group>
                        <group>
                            <h1><field name="address"/></h1>
                        </group>
                    </div>
                    <group>
                        <group>
                            <field name="purpose"></field>
                            <field name="in_time" readonly="1"></field>
                        </group>
                        <group>
                            <field name="ordinal_number" readonly="1"></field>
                            <field name="out_time"></field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="access_control_search_view" model="ir.ui.view">
        <field name="name">access.control.search</field>
        <field name="model">access.control</field>
        <field name="arch" type="xml">
            <search string="Access Controls">
                <field name="number_plate"/>
                <field name="res_partner_id"/>
                <group expand="0" string="Group By">
                    <filter string="Purpose" name="purpose" context="{'group_by': 'purpose'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="access_control_list_view" model="ir.ui.view">
        <field name="name">access.control.list</field>
        <field name="model">access.control</field>
        <field name="arch" type="xml">
            <tree string="Access Controls">
                <!--                <header>-->
                <!--                    <button name="action_print_report" type="object" string="Print" class="oe_highlight"/>-->
                <!--                </header>-->
                <field name="number_plate" optional="show"/>
                <!--                <field name="res_partner_id"/>-->
                <field name="name" optional="show"></field>
                <field name="address" optional="show"></field>
                <field name="purpose" optional="show"></field>
                <field name="purpose_descript" optional="show"/>
                <field name="in_time" optional="show"></field>
                <field name="ordinal_number" optional="show"></field>
                <field name="out_time" optional="show"></field>
                <field name="weight_in" optional="show"></field>
                <field name="weight_out" optional="show"></field>
                <field name="product_category_ids" optional="show"></field>
            </tree>
        </field>
    </record>
    <!-- Access Control Kanban View -->
    <record id="access_control_kanban_view" model="ir.ui.view">
        <field name="name">access.control.kanban</field>
        <field name="model">access.control</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <kanban class="o_access_control_kanban" sample="1">
                <field name="number_plate"/>
                <field name="res_partner_id"/>
                <field name="purpose"/>
                <field name="in_time"/>
                <field name="ordinal_number"/>
                <field name="out_time"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_access_control_kanban">
                            <div class="o_kanban_image_fill_left o_kanban_image_full"
                                 t-attf-style="background-image: url(#{kanban_image('res.partner', 'avatar_128', record.res_partner_id.raw_value)})"
                                 role="img"/>
                            <div class="oe_kanban_details d-flex flex-column">
                                <strong class="o_kanban_record_title oe_partner_heading text-center"><h2><field
                                        name="ordinal_number"/></h2></strong>
                                <strong class="o_kanban_record_title oe_partner_heading"><h3><field
                                        name="name"/></h3></strong>
                                <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                <ul>
                                    <li t-if="record.address.raw_value"><field name="address"/></li>
                                    <li t-if="record.number_plate.raw_value"><field name="number_plate"/></li>
                                    <li t-if="record.purpose.raw_value != 'visit'"><field name="purpose"/></li>
                                    <li t-if="record.purpose.raw_value == 'visit'"><field name="purpose_descript"/></li>
                                </ul>
                                <div class="o_row">
                                    <span class="oe_kanban_partner_links"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Views for weight-->
    <record id="access_control_search_view_for_weight" model="ir.ui.view">
        <field name="name">access.control.search</field>
        <field name="model">access.control</field>
        <field name="arch" type="xml">
            <search string="Access Controls">
                <field name="purpose" string="Partner visit" filter_domain="[('purpose', 'in', ['sale', 'purchase'])]"/>
                <group expand="1" string="Group By">
                    <filter string="State" name="state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="access_control_list_view_for_weight" model="ir.ui.view">
        <field name="name">access.control.list</field>
        <field name="model">access.control</field>
        <field name="arch" type="xml">
            <tree string="Access Controls">
                <field name="number_plate" optional="show"/>
                <field name="name" optional="show"></field>
                <field name="address" optional="show"></field>
                <field name="purpose" optional="show"></field>
                <field name="purpose_descript" optional="show"/>
                <field name="in_time" optional="show"></field>
                <field name="ordinal_number" optional="show"></field>
                <field name="out_time" optional="show"></field>
                <field name="weight_in" optional="show"></field>
                <field name="weight_out" optional="show"></field>
                <field name="product_category_ids" optional="show"></field>
            </tree>
        </field>
    </record>


    <!-- Actions -->
    <!-- Actions Access control-->
    <record id="action_access_control_form" model="ir.actions.act_window">
        <field name="name">Access Controls</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">access.control</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="access_control_search_view"/>
        <field name="view_id" ref="access_control_kanban_view"/>
    </record>

    <!-- Actions Weight vehicle-->
    <record id="action_weight_form" model="ir.actions.act_window">
        <field name="name">Weight Vehicle</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">access.control</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('purpose', 'in', ['sale', 'purchase']), ('state', 'not in', ['out'])]</field>
        <field name="search_view_id" ref="access_control_search_view_for_weight"/>
        <field name="view_id" ref="access_control_list_view_for_weight"/>
    </record>

    <!-- Top menu item -->
    <menuitem id="access_control_menu_root"
              name="Access Controls"
              web_icon="access_control,static/description/icon.png"
              sequence="15"/>

    <menuitem id="access_control_menu"
              action="action_access_control_form"
              name="Access Control"
              parent="access_control_menu_root"
              sequence="1" groups="access_control.group_access_control_user"/>

    <menuitem id="weight_menu"
              action="action_weight_form"
              name="Weight Vehicle"
              parent="access_control_menu_root"
              sequence="2" groups="access_control.group_weight_user"/>

    <menuitem id="report_menu"
              name="Report"
              parent="access_control_menu_root"
              sequence="3"/>

</odoo>