<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="action_stock_alarm" model="ir.actions.act_window">
        <field name="name">Cảnh báo</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.quant</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_stock_quant_tree_editable"/>
        <field name="domain">[('location_id', '!=', None), ('location_id.usage', 'in', ['internal', 'transit'])]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new order, the first step of a new report!
            </p>
            <p>
                Once the quotation is confirmed, it becomes a sales order.
                <br/>
                You will be able to create an invoice and collect the payment.
            </p>
        </field>
    </record>

</odoo>