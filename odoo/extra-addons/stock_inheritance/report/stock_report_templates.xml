<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_stock_move_inventory_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <link rel="stylesheet" href="/base_inheritance/static/src/css/style.css" />
                <meta charset="utf-8"/>
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 class="text-center bold"><center>BÁO CÁO NHẬP XUẤT TỒN</center></h2>
                    <br/>
                    <div>
                        <table class="table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center">Mã sản phẩm</th>
                                     <th class="text-center">Cập nhật lần cuối</th>
                                    <th class="text-center">Tên sản phẩm</th>
                                    <th class="text-center">Tồn đầu</th>
                                    <th class="text-center">Nhập kho</th>
                                    <th class="text-center">Xuất kho</th>
                                    <th class="text-center">Tồn cuối</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td class="text-left" >
                                            <span t-field="o.product_tmpl_id.default_code"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.write_date"/>
                                        </td>
                                        <td class="text-left" >
                                            <span t-field="o.product_tmpl_id.name"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.begin_inventory"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.warehouse_entry"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.warehouse_export"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.end_inventory"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>

</odoo>
