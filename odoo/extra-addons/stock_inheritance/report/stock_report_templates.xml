<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_stock_move_inventory_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <link rel="stylesheet" href="/base_inheritance/static/src/css/style.css" />
                <meta charset="utf-8"/>
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 class="text-center bold"><center>Inventory import and export report</center></h2>
                    <br/>
                    <div>
                        <table class="table-bordered">
                            <thead>
                                <tr>
                                    <th style="width :3%" class="table-item">No.</th>
                                    <th class="text-center">Product id</th>
                                     <th class="text-center">Last update</th>
                                    <th class="text-center">Product</th>
                                    <th class="text-center">Start inventory</th>
                                    <th class="text-center">Import</th>
                                    <th class="text-center">Export</th>
                                    <th class="text-center">Ending inventory</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="i" t-value="1" />
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                         <td class="text-center">
                                            <span t-esc="i"/>
                                            <t t-set="i" t-value="i+1"/>
                                        </td>
                                        <td class="text-left" >
                                            <span t-field="o.product_tmpl_id.default_code"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.write_date"/>
                                        </td>
                                        <td class="text-left" >
                                            <span t-field="o.product_tmpl_id.name"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.begin_inventory"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.warehouse_entry"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.warehouse_export"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.end_inventory"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>

</odoo>
