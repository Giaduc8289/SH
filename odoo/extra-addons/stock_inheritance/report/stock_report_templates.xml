<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_stock_move_inventory_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 class="text-center bold"><center>BÁO CÁO NHẬP XUẤT TỒN</center></h2>
                    <br/>
                    <div>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;"
                                        class="text-left">Mã sản phẩm</th>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;"
                                        class="text-left">Tên sản phẩm</th>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;"
                                        class="text-right">Tồn đầu</th>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;"
                                        class="text-right">Nhập kho</th>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;"
                                        class="text-right">Xuất kho</th>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;"
                                        class="text-right">Tồn cuối</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td class="text-left">
                                            <span t-field="o.product_id.code"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.product_id.name"/>
                                        </td>
                                        <t t-if="o.location_id != o.location_dest_id">
                                            <td class="text-right">
                                                <span t-field="o.quantity"/>
                                            </td>
<!--                                        <td class="text-right">-->
<!--                                            <span t-field="o.out_time"/>-->
<!--                                        </td>-->
                                        </t>
<!--                                        <td class="text-right">-->
<!--                                            <span t-field="o.purpose"/>-->
<!--                                        </td>-->
<!--                                        <td class="text-right">-->
<!--                                            <span t-field="o.purpose_descript"/>-->
<!--                                        </td>-->

                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>

</odoo>
