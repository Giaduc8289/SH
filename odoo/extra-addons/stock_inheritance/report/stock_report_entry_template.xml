<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_stock_entry_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <link rel="stylesheet" href="/base_inheritance/static/src/css/style.css"/>
                <meta charset="utf-8"/>
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 style="text-transform: uppercase" class="text-center bold"><center>Warehouse import and export report <t
                            t-if="stock"><t t-esc="name_stock"/></t></center></h2>
                    <br/>
                    <span class="text-center bold"><center>
                        <t t-if="date_start">
                            <span class="text-center bold"><strong>From date : <t t-esc="date_start"/></strong></span>
                        </t>
                        <t t-if="date_start and date_end">
                            <span class="text-center bold"><strong> - </strong></span>
                        </t>
                        <t t-if="date_end">
                            <span class="text-center bold"><strong>To date : <t t-esc="date_end"/></strong></span>
                        </t>
                    </center>
                    </span>
                    <br/>
                    <div>
                        <table class="table-bordered">
                            <thead>
                                <tr>
                                    <th style="width :3%" class="table-item">No.</th>
                                    <th class="text-center">Origin</th>
                                    <th class="text-center">Product</th>
                                    <th class="text-center">Delivery date</th>
                                    <group t-if="stock">
                                        <th class="text-center">Quantity import</th>
                                        <th class="text-center">Quantity export</th>
                                        <th class="text-center">Unit</th>
                                    </group>
                                    <group t-if="not stock">
                                        <th class="text-center">Quantity</th>
                                        <th class="text-center">Unit</th>
                                        <th class="text-center">Source repository</th>
                                        <th class="text-center">Destination warehouse</th>
                                    </group>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="i" t-value="1"/>
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td class="text-center">
                                            <span t-esc="i"/>
                                            <t t-set="i" t-value="i+1"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.origin"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.name"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.date" t-options='{"widget": "date"}'/>
                                        </td>
                                        <group t-if="stock">
                                            <td class="text-right">
                                                <t t-if="stock == o.location_dest_id.id ">
                                                    <span t-field="o.product_qty"/>
                                                </t>
                                            </td>
                                            <td class="text-right">
                                                <t t-if="stock == o.location_id.id ">
                                                    <span t-field="o.product_qty"/>
                                                </t>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.product_uom"/>
                                            </td>
                                        </group>
                                        <group t-if="not stock">
                                            <td class="text-right">
                                                <span t-field="o.product_qty"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.product_uom"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.location_id"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.location_dest_id"/>
                                            </td>
                                        </group>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>

</odoo>
