<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_stock_entry_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <link rel="stylesheet" href="/base_inheritance/static/src/css/style.css" />
                <meta charset="utf-8"/>
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 style="text-transform: uppercase" class="text-center bold"><center>BÁO CÁO NHẬP XUẤT KHO <t
                            t-if="stock"><t t-esc="name_stock"/></t></center></h2>
                    <br/>
                    <span class="text-center bold"><center>
                        <t t-if="date_start">
                            <span class="text-center bold"><strong>Từ ngày : </strong><t t-esc="date_start"/></span>
                        </t>
                        <t t-if="date_start and date_end">
                            <span class="text-center bold"><strong> - </strong></span>
                        </t>
                        <t t-if="date_end">
                            <span class="text-center bold"><strong>Đến ngày : </strong><t t-esc="date_end"/></span>
                        </t>
                    </center>
                    </span>
                    <br/>
                    <div>
                        <table class="table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center">Tài liệu gốc</th>
                                    <th class="text-center">Tên</th>
                                    <th class="text-center">Ngày giao</th>
                                    <group t-if="stock">
                                        <th class="text-center">Khối lượng nhập</th>
                                        <th class="text-center">Khối lượng xuất</th>
                                        <th class="text-center">Đơn vị</th>
                                    </group>
                                    <group t-if="not stock">
                                        <th class="text-center">Khối lượng</th>
                                        <th class="text-center">Đơn vị</th>
                                        <th class="text-center">Kho nguồn</th>
                                        <th class="text-center">Kho đích</th>
                                    </group>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                            <td class="text-left" >
                                            <span t-field="o.origin"/>
                                        </td>
                                        <td class="text-left" >
                                            <span t-field="o.name"/>
                                        </td>
                                        <td class="text-right" >
                                            <span t-field="o.date" t-options='{"widget": "date"}'/>
                                        </td>
                                        <group t-if="stock">
                                            <td class="text-right" >
                                                <t t-if="stock == o.location_dest_id.id ">
                                                    <span t-field="o.product_qty"/>
                                                </t>
                                            </td>
                                            <td class="text-right" >
                                                <t t-if="stock == o.location_id.id ">
                                                    <span t-field="o.product_qty"/>
                                                </t>
                                            </td>
                                            <td class="text-right" >
                                                <span t-field="o.product_uom"/>
                                            </td>
                                        </group>
                                        <group t-if="not stock" >
                                            <td class="text-right" >
                                                <span t-field="o.product_qty"/>
                                            </td>
                                            <td class="text-right" >
                                                <span t-field="o.product_uom"/>
                                            </td>
                                            <td class="text-right" >
                                                <span t-field="o.location_id"/>
                                            </td>
                                            <td class="text-right" >
                                                <span t-field="o.location_dest_id"/>
                                            </td>
                                        </group>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>

</odoo>
