<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_stock_entry_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 style="text-transform: uppercase" class="text-center bold" ><center>BÁO CÁO NHẬP XUẤT KHO <t t-if ="stock" ><t t-esc ="name_stock"/></t></center></h2>
                    <div>
                        <t t-if="date_start">
                            <h4 class="text-center bold"><center>Từ ngày: <t t-esc="date_start"/></center></h4>
                        </t>

                    </div>
                    <div>
                        <t t-if="date_end">
                            <h4 class="text-center bold"><center>Đến ngày: <t t-esc="date_end"/></center></h4>
                        </t>
                    </div>
                    <br/>
                    <div>
                        <table class="table table-bordered" style="border-collapse: collapse ; width : 100%;">
                            <thead>
                                <tr>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;"
                                        class="text-left">Tài liệu gốc</th>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;"
                                        class="text-left">Tên</th>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;"
                                        class="text-left">Ngày giao</th>
                                    <group t-if="stock">
                                        <th style="background-color:#3498DB !important;color:#FFF !important;"
                                            class="text-right">Khối lượng nhập</th>
                                        <th style="background-color:#3498DB !important;color:#FFF !important;"
                                            class="text-right">Khối lượng xuất</th>
                                        <th style="background-color:#3498DB !important;color:#FFF !important;"
                                            class="text-right">Đơn vị</th>
                                    </group>
                                    <group t-if="not stock">
                                        <th style="background-color:#3498DB !important;color:#FFF !important;"
                                            class="text-right">Khối lượng</th>
                                        <th style="background-color:#3498DB !important;color:#FFF !important;"
                                            class="text-right">Đơn vị</th>
                                        <th style="background-color:#3498DB !important;color:#FFF !important;"
                                            class="text-right">Kho nguồn</th>
                                        <th style="background-color:#3498DB !important;color:#FFF !important;"
                                            class="text-right">Kho đích</th>
                                    </group>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td class="text-left">
                                            <span t-field="o.origin"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.name"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.date"/>
                                        </td>
                                        <group t-if="stock">
                                            <td class="text-right">
                                                <t t-if="stock == o.location_dest_id.id ">
                                                    <span t-field="o.product_qty"/>
                                                </t>
                                            </td>
                                            <td class="text-right">
                                                <t t-if="stock == o.location_id.id ">
                                                    <span t-field="o.product_qty"/>
                                                </t>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.product_uom"/>
                                            </td>
                                        </group>
                                        <group t-if="not stock">
                                            <td class="text-right">
                                                    <span t-field="o.product_qty"/>
                                            </td>
                                            <td class="text-right">
                                                    <span t-field="o.product_uom"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.location_id"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.location_dest_id"/>
                                            </td>
                                        </group>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>

</odoo>
